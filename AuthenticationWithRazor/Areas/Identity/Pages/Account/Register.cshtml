@page
@model RegisterModel
@{
    ViewData["Title"] = "Sign up";
}

<div class="row">
    <div class="col-lg-6 mx-auto rounded border p-3">
        <h2 class="text-center mb-6">Create a new account.</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" asp-for="Input.FirstName">First Name</label>
                <div class="col-sm-8">
                    <input asp-for="Input.FirstName" class="form-control" aria-required="true"/>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" asp-for="Input.LastName">Last Name</label>
                <div class="col-sm-8">
                    <input asp-for="Input.LastName" class="form-control" aria-required="true"/>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" asp-for="Input.Email">Email</label>
                <div class="col-sm-8">
                    <input asp-for="Input.Email" class="form-control" aria-required="true"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" asp-for="Input.Email">Phone</label>
                <div class="col-sm-8">
                    <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true"/>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" asp-for="Input.Address">Address</label>
                <div class="col-sm-8">
                    <input asp-for="Input.Address" class="form-control" aria-required="true"/>
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" asp-for="Input.Password">Password</label>
                <div class="col-sm-8">
                    <input asp-for="Input.Password" class="form-control" aria-required="true"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" asp-for="Input.ConfirmPassword">Confirm Password</label>
                <div class="col-sm-8">
                    <input asp-for="Input.ConfirmPassword" class="form-control"  aria-required="true"/>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3 flex align-items-center justify-content-center">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>